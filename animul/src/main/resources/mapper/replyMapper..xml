<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="reply">
	<insert id="insert" parameterType="bbsVO" >
		insert into bbs_reply values (
		null,
		#{bbs_id}
		#{member_id},
		#{reply_content},
		#{reply_date}
		)
	</insert>
	<update id="update" parameterType="bbsVO" >
		update bbs_reply set reply_content = #{reply_content}, where member_id = #{member_id}
	</update>
	<delete id="delete" parameterType="bbsVO" >
		delete from bbs_reply where reply_id = #{reply_id}
	</delete>
	<select id="one" parameterType="bbsVO" resultType="bbsVO">
		select * from bbs_reply where member_id = #{member_id}
	</select>
	<select id="list" resultType="bbsVO">
		select * from bbs_reply order by reply_id desc
	</select>
</mapper>